#!/bin/sh
set -e

# Make the folder the tweak expects
mkdir -p /var/mobile/Media/W2Like
chown -R mobile:mobile /var/mobile/Media/W2Like
chmod 775 /var/mobile/Media/W2Like

# Refresh Settings (optional) and respring to pick up the bundle quickly
uicache 2>/dev/null || true
killall -9 backboardd 2>/dev/null || true

exit 0
